\newcommand*{\WoO}{Werk ohne Opuszahl\,}
\newcommand*{\WoOs}{Werke ohne Opuszahl\,}
\newcommand*{\BLB}{\Institution{Badische Landesbibliothek}\,}


%%%%% Kommando \dynmark{} erlaubt Dynamik-Zeichen im Fließtext %%%%%
\newcommand{\muskern}{\kern-.15ex } % what MusiXTeX does

\makeatletter
\newcommand\dynmark[1]{{\normalfont\bfseries\itshape
		\@tfor\next:=#1\do{\put@muskern\next}\/}}
\newcommand{\put@muskern}{\let\put@muskern\muskern}
\makeatother

